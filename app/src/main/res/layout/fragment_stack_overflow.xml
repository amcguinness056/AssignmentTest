<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stack_overflow_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stackOverflowFragment">

    <SearchView
        android:id="@+id/searchView_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="85dp"
        android:queryHint="Search for Question..." />

    <ImageView
        android:id="@+id/imageView_stackOverflow"
        android:layout_width="297dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/stackOverflow_logo" />

    <TableLayout
        android:layout_width="324dp"
        android:layout_height="351dp"
        android:layout_alignStart="@+id/imageView_stackOverflow"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-23dp"
        android:layout_marginTop="136dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <TextView
                android:id="@+id/textView_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="Question 1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="20"
                android:src="@mipmap/icons8_forward_48" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <TextView
                android:id="@+id/textView_question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="Question 2" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="20"
                android:src="@mipmap/icons8_forward_48" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <TextView
                android:id="@+id/textView_question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="Question 3" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="20"
                android:src="@mipmap/icons8_forward_48" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <TextView
                android:id="@+id/textView_question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="Question 4" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="20"
                android:src="@mipmap/icons8_forward_48" />
        </TableRow>

    </TableLayout>

</RelativeLayout>